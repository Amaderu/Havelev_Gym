<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_500"
    tools:context=".HelloActivity">
    <TextView
        android:id="@+id/step"
        style="@style/TextStyleND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Step 1/5"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/answer"
        style="@style/TextStyleND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:lines="1"
        android:text="@string/answer_1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step" />

    <Button
        android:id="@+id/btn1"
        style="@style/CustomButton.TextStyleND"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:drawableStart="@drawable/ico_weigh"
        android:drawablePadding="30dp"
        android:paddingLeft="23dp"
        android:text="Weight loss"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/custom"
        android:textSize="24sp"

        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

    <Button
        android:id="@+id/btn2"
        style="@style/CustomButton.TextStyleND"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttons"
        android:drawableStart="@drawable/ico_keep_fit"
        android:drawablePadding="30dp"
        android:paddingLeft="23dp"
        android:text="Keeping fit"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/custom"
        android:textSize="24sp"

        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        style="@style/CustomButton.TextStyleND"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:drawableStart="@drawable/ico_muscle"
        android:drawablePadding="30dp"
        android:paddingLeft="23dp"
        android:text="Build muscule"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/custom"
        android:textSize="24sp"

        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <ImageButton
        android:id="@+id/btnFemale"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_buttons"
        android:src="@drawable/ico_female"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer"/>
    <ImageButton
        android:id="@+id/btnMale"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_buttons"
        android:padding="20dp"
        android:src="@drawable/ico_male"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer"/>
    <TextView
        android:id="@+id/tvMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Male"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/btnMale"
        app:layout_constraintStart_toStartOf="@id/btnMale"
        app:layout_constraintTop_toBottomOf="@id/btnMale"/>
    <TextView
        android:id="@+id/tvFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Female"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/btnFemale"
        app:layout_constraintStart_toStartOf="@id/btnFemale"
        app:layout_constraintTop_toBottomOf="@id/btnFemale"/>

    <Button
        android:id="@+id/btnNext"
        style="@style/CustomButton.TextStyleND"
        android:layout_width="312dp"
        android:layout_height="70dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/buttons"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/custom"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>